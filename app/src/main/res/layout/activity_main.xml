<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.mkrivoshea.contactbook.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="45dp"
                android:text="Contact Book"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_title"
                android:layout_margin="10dp"
                android:text="Name: "/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_name"
                android:hint="Please enter your contact's name"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignBottom="@id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tv_name"
                android:textSize="16sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone"
                android:textSize="18sp"
                android:text="Phone: "
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_name"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_phone"
                android:layout_toRightOf="@id/tv_phone"
                android:layout_alignBottom="@id/tv_phone"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:textAlignment="center"
                android:hint="Please enter your contact's phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email"
                android:textSize="18sp"
                android:text="E-mail: "
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_phone"
                android:layout_margin="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_email"
                android:layout_toRightOf="@id/tv_email"
                android:layout_alignBottom="@id/tv_email"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:textAlignment="center"
                android:hint="Please enter your contact's e-mail"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_contact"
                android:text="ADD CONTACT"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/et_email"
                android:layout_margin="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_sort_contacts"
                android:text="SORT CONTACTS"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bt_contact"
                android:layout_margin="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_error"
                android:layout_below="@id/bt_sort_contacts"
                android:textSize="18sp"
                android:text=""
                android:padding="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_list"
                android:layout_below="@id/tv_error"
                android:textSize="18sp"
                android:text=""
                android:padding="32dp"/>


        </RelativeLayout>

    </ScrollView>



</FrameLayout>